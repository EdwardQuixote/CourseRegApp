<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.co.hotmail.edwardquixote.courseregapp.FOCIMActivity">

    <TextView
        android:id="@+id/txtFOCIMLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtFOCIM"
        android:textSize="@dimen/textSize_22"
        android:gravity="center"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cardFOCIMCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFOCIMLabel"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation">

        <ListView
            android:id="@+id/lstFOCIMCourses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_for_cards"
            android:divider="@color/clrColorAccent"
            android:entries="@array/saryFOCIMCourses"/>
    </android.support.v7.widget.CardView>

</RelativeLayout>
